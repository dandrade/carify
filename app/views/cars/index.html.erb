<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Color</th>
      <th>Car brand</th>
      <th>Doors</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Dealerships</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.model %></td>
        <td><%= car.color %></td>
        <td><%= car.car_brand.name %></td>
        <td><%= car.doors %></td>
        <td><%= number_to_currency(car.price) %></td>

        <td><%= car.quantity %></td>
        <td><%= car.dealerships.map { |deal| deal.name }.join(", ") %></td>
        <td><%= car.kind %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path if current_user.admin? %>
